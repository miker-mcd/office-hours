<% if @errors && @errors.any? %>
  <ul>
    <% @errors.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for [@project, @update] do |f| %>
  <%= f.select(:status, [['Initial', 1], ['General Note', 2], ['Lab Test', 3], ['Written Test', 4],['Complete', 5], ['Failed', 6]])%>
  <%= f.text_field :title, placeholder: "Title" %>
  <%= f.text_field :description, placeholder: "Description" %>
  <%#= f.hidden_field :approval, :value => false %>
  <%= f.submit "Create Update for Project" %>
<% end %>

<%= link_to "Back", project_updates_path %>
