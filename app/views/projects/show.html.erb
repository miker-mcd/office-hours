<!DOCTYPE html>
<html>
<head>
  <title></title>
</head>
<body>

<div class="row">
        <div class="col s12 m6">
          <div class="card teal accent-1">
            <div class="card horizontal teal accent-1 card-panel hoverable">
            <div class="card-content text-darken-2">
              <span class="card-title"><%= @project.title%></span>

          <p>
          <strong> Description: </strong>
            <%= @project.description %>
          </p>

          <%= form_tag('/sms') do |form| %>
          <%= telephone_field_tag 'tel', nil, placeholder: "xxx-xxx-xxxx" %>
          <%= text_field_tag 'message', nil, placeholder: "message" %>
          <%= hidden_field_tag 'project_id', @project.id %>
          <%= button_tag 'text'%>
          <% end %>

          <td><%= link_to "Edit", edit_project_path(@project) %> </td>
           <%= link_to 'Back' , projects_path %>
      </div>
     </div>
    </div>
  </div>





</body>
</html>
